b' <!DOCTYPE html> <html lang="en"> <head> <meta charset="utf-8"> <meta http-equiv="X-UA-Compatible" content="IE=edge"> <meta name="viewport" content="width=device-width, initial-scale=1">  <meta name="description" content="www.paste.org - allows users to paste snippets of text, usually samples of source code, for public viewing."> <meta name="author" content="An Australian"> <link rel="icon" href="/favicon.ico"> <title>Paste code - paste.org</title>  <link href="/assets/themes/bleh/css/github-highlight.css" rel="stylesheet"> <script src="/assets/themes/bleh/js/highlight.pack.js"></script> <script>hljs.initHighlightingOnLoad();</script> </head> <body> <p><pre><code class="c">#include &quot;opencv2/highgui/highgui.hpp&quot;\n\nusing namespace std;\nstruct point {\n int x,y;\n  \n \n };\nvoid dibujar_Tri(IplImage *img,point a,point b,point c,int nsize){\n \n if(nsize==0||a.x==0)return;\n \n  cvLine(img,cvPoint(a.x, a.y),cvPoint(b.x, b.y),cvScalar(0,255,255,0));\n  cvLine(img,cvPoint(b.x, b.y),cvPoint(c.x, c.y),cvScalar(0,255,255,0));\n  cvLine(img,cvPoint(a.x, a.y),cvPoint(c.x, c.y),cvScalar(0,255,255,0));\n  a.x++;\n  c.x--;\n  \n  dibujar_Tri(img,a,b,c,nsize-1);\n  \n  \n \n }\npoint mitad(point a,point b){\n point resul;\n resul.x=(a.x+b.x)/2;\n resul.y=(a.y+b.y)/2;\n \nreturn resul; \n }\nvoid Triangulo(IplImage *img,point  a,point b, point c,int iter,int nsize){\n if(iter==0){\n dibujar_Tri(img,a,b,c,nsize);\n return;\n \n } \n point AB=mitad(a,b);\n point BC=mitad(b,c);\n point CA=mitad(c,a);\n Triangulo(img,a,AB,CA,iter-1,nsize/2);\n Triangulo(img,AB,b,BC,iter-1,nsize/2);\n Triangulo(img,CA,BC,c,iter-1,nsize/2);\n \n \n}\n\nint main( int argc, char** argv ) {\n int npower =7;\n point A,B,C;\n if(argc&gt;1) npower = atoi(argv[1]);\n \nunsigned long nsize  =(unsigned long)(pow(3,npower)+1);\n \n IplImage *img = cvCreateImage(cvSize(nsize, nsize), IPL_DEPTH_8U, 3);\n cvNamedWindow(&quot;Triangulo de Sierpinski&quot;, CV_WINDOW_AUTOSIZE);\n A.x=0;\n A.y=nsize;\n B.x=nsize/2;\n B.y=0;\n C.x=nsize;\n C.y=nsize;\n Triangulo(img,A,B,C,npower,nsize);\n \n \n \n cvSaveImage(&quot;Triangulo de Sierpinski.png&quot;,img);\n    cvShowImage(&quot;Triangulo de Sierpinski&quot;, img);\n    cvWaitKey(0);\n\n    cvDestroyWindow(&quot;Triangulo de Sierpinski&quot;);\n    cvReleaseImage(&amp;img;);\n\n\n\n\nreturn 0;\n}</code></pre></p> <p align="right"><span style="font-size: 60%">Add a code snippet to your website: <a href="https://www.paste.org" target="_blank">www.paste.org</a></span></p> </body> </html>'